@using PR37.Data.Models
@using PR37.Data.ViewModels
@model IEnumerable<Categories>
@{
    Layout = "_Layout";
}
<form method="post" enctype="multipart/form-data">
    <div>
        Наименование:
        <br /><input name="name" placeholder="Наименование:" />
    </div>
    <div>
        Описание:
        <br /><input name="description" placeholder="Описание:" />
    </div>
    <div>
        <label for="file">Изображение</label>
        <br /><input name="files" type="file" />
    </div>
    <div>
        Стоимость:
        <br /><input name="price" />
    </div>
    <div>
        Категория:
        <br /><select name="Category">
            @{
                foreach (var Category in Model.ToList())
                {
                    if(Category.Id == Model.First().Id)
                    {
                        <option value="@Category.Id" selected ="selected">@Category.Name</option>
                    }
                    else
                    {
                        <option value="@Category.Id">@Category.Name</option>
                    }
                }
            }
        </select>
    </div>
    <input type="submit" />
</form>