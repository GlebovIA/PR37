@using PR37.Data.Models
@using PR37.Data.ViewModels
@model VMItems
@{
    Layout = "_Layout";
    Items item = Model.Items.Where(x => x.Id == Model.SelectedItem).First();
}
    <form method="post" enctype="multipart/form-data">
        <div>
            Наименование:
            <br /><input name="name" data="@item.Name" placeholder="Наименование:" />
        </div>
        <div>
            Описание:
            <br /><input name="description" data="@item.Description." placeholder="Описание:" />
        </div>
        <div>
            <label for="file">Изображение</label>
            <br /><input name="files" data="@item.Img" type="file" />
        </div>
        <div>
            Стоимость:
            <br /><input name="price" data="@item.Price" />
        </div>
        <div>
            Категория:
            <br /><select name="Category">
    @{
        foreach (var Category in Model.Categories.ToList())
        {
            if (Category.Id == item.Category.Id)
            {
                <option value="@Category.Id" selected="selected">@Category.Name</option>
            }
            else
            {
                <option value="@Category.Id">@Category.Name</option>}
            }
    }
</select>
        </div>
        <input type="submit" />
    </form>